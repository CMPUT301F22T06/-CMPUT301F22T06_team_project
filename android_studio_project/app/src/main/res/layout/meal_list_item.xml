<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/meal_border">

    <TextView
        android:id="@+id/tv_meal_recipes_header_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipes: "
        android:paddingHorizontal="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/dark_blue"/>

    <LinearLayout
        android:id="@+id/ll_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15sp" />


    <ListView
        android:orientation="vertical"
        android:id="@+id/lv_recipes_in_meal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15sp"
        android:textColor="@color/dark_blue"/>

    <TextView
        android:id="@+id/tv_meal_ingredients_header_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients: "
        android:paddingHorizontal="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="@color/dark_blue"/>

    <ListView
        android:orientation="vertical"
        android:id="@+id/lv_ingredients_in_meal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15sp"
        android:textColor="@color/dark_blue"/>

    <LinearLayout
        android:id="@+id/ll_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15sp" />


</LinearLayout>