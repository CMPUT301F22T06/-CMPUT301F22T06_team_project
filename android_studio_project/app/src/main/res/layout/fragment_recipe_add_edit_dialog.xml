<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="20dp" />

                <!--        TODO Replace a carriage return with ' next '-->
                <EditText
                    android:id="@+id/et_recipe_add_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name Here"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="55"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/view_recipe_image"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_recipe_add_edit_upload"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:textColor="@color/black"
                    android:text="Upload Picture"
                    android:textSize="8dp"/>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serves: "
                android:textSize="14dp" />

            <!--        TODO Replace a carriage return with ' next '-->
            <EditText
                android:id="@+id/et_recipe_add_edit_servings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Servings Here"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Preptime: "
                android:textSize="15dp" />

            <!--        TODO Replace a carriage return with ' next '-->
            <EditText
                android:id="@+id/et_recipe_add_edit_preptime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="minutes"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textSize="15dp"/>

            <Spinner
                android:id="@+id/sp_recipe_add_edit_category"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients: "
                    android:textSize="20dp" />

            <Spinner
                android:id="@+id/sp_recipe_add_edit_ingredients_dropdown"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textSize="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Description"
                    android:textSize="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Quantity"
                    android:textSize="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Unit"
                    android:textSize="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Category"
                    android:textSize="10dp" />
            </LinearLayout>
            <!--        TODO Replace a carriage return with ' next ' action-->

            <ListView
                android:id="@+id/lv_recipe_add_edit_ingredients_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:width="1dp"
                android:color="#ff9900"
                android:gravity="top"
                android:hint="All ingredients will be shown here"
                android:imeOptions="actionNext"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments: "
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_recipe_add_edit_comments"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Enter recipe comments "
                    android:inputType="textCapSentences|textPersonName|textMultiLine"
                    android:gravity="top"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btn_recipe_add_edit_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:text="CANCEL"/>

            <Button
                android:id="@+id/btn_recipe_add_edit_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:text="DELETE"/>

            <Button
                android:id="@+id/btn_recipe_add_edit_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:text="SAVE"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>