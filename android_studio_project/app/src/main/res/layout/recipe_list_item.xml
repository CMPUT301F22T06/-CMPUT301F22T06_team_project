<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_recipe_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/yellow"
            android:textSize="24dp"
            android:translationX="25dp" />

        <TextView
            android:id="@+id/tv_recipe_list_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textColor="@color/yellow"
            android:translationX="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/yellow">

            <TextView
                android:id="@+id/tv_recipe_list_item_preptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrepTime"
                android:textColor="@color/yellow"
                android:translationX="25dp" />

            <TextView
                android:id="@+id/tv_recipe_list_item_preptime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingHorizontal="10dp"
                android:text="Minute Prep. Time"
                android:textColor="@color/yellow"
                android:translationX="20dp" />

            <TextView
                android:id="@+id/tv_recipe_list_item_servings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Serving size"
                android:textColor="@color/yellow"
                android:translationX="15dp" />

            <TextView
                android:id="@+id/tv_recipe_list_item_servings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Serving size"
                android:textColor="@color/yellow"
                android:translationX="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_recipe_list_item_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textColor="@color/yellow"
                android:translationX="25dp" />


            <TextView
                android:id="@+id/tv_recipe_list_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/yellow"
                android:translationX="25dp" />




<!--        Missing photo.-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>