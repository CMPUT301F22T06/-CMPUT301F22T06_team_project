<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/red">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name: "
                                android:textColor="@color/yellow"
                                android:textSize="20dp" />

                            <!--        TODO Replace a carriage return with ' next '-->
                            <EditText
                                android:id="@+id/et_recipe_add_edit_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Name Here"
                                android:imeOptions="actionNext"
                                android:inputType="textPersonName|textCapWords"
                                android:maxLength="55"
                                android:textColorHint="@color/light_yellow"
                                android:textColor="@color/yellow"
                                android:textSize="15dp"
                                android:digits="abcdefghijklmnopqrstuvwxyz0123456789 -"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <Button
                            android:id="@+id/btn_recipe_add_edit_camera"
                            android:layout_width="40dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:drawableTop="@drawable/camera"
                            android:gravity="center"

                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btn_recipe_add_edit_upload"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:paddingLeft="17dp"
                            android:paddingTop="8dp"
                            android:layout_marginLeft="5dp"
                            android:drawableTop="@drawable/upload_image"

                            android:gravity="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Serves: "
                                android:textColor="@color/yellow"
                                android:textSize="18dp" />

                            <EditText
                                android:id="@+id/et_recipe_add_edit_servings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="3"
                                android:text="1"
                                android:textColor="@color/yellow"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Preptime: "
                                android:textColor="@color/yellow"
                                android:textSize="18dp" />

                            <!--        TODO Replace a carriage return with ' next '-->
                            <EditText
                                android:id="@+id/et_recipe_add_edit_preptime"
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="5"
                                android:text="1"
                                android:textColor="@color/yellow"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/view_recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/categoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category: "
                        android:textColor="@color/yellow"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <EditText
                                android:id="@+id/addCategory"
                                android:layout_width="100dp"
                                android:layout_height="55dp"
                                android:layout_weight="0"
                                android:hint="Add Recipe Category"
                                android:textSize="10dp"
                                android:textColorHint="@color/light_yellow"
                                android:textColor="@color/light_yellow"
                                android:visibility="invisible" />

                            <Button
                                android:id="@+id/addCategoryButton"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:text="Add Category"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <Spinner
                            android:id="@+id/sp_recipe_add_edit_category"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:backgroundTint="@color/yellow" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients: "
                    android:textSize="20dp"
                    android:textColor="@color/yellow"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/sp_recipe_add_edit_ingredients_dropdown"
                        android:layout_width="130dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_height="40sp"
                        android:textColor="@color/yellow"
                        android:backgroundTint="@color/yellow"
                        />

                    <Button
                        android:id="@+id/btn_recipe_add_edit_add_ingredient"
                        android:layout_width="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:text="Add"/>

                </LinearLayout>


                <!--        TODO Replace a carriage return with ' next ' action-->

                <ListView
                    android:id="@+id/lv_recipe_add_edit_ingredients_view"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:width="1dp"
                    android:color="#ff9900"
                    android:gravity="top"
                    android:hint="All ingredients will be shown here"
                    android:imeOptions="actionNext"
                    android:textSize="18dp" >
                </ListView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comments: "
                        android:textSize="20dp"
                        android:textColor="@color/yellow"/>

                    <EditText
                        android:id="@+id/et_recipe_add_edit_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter recipe comments "
                        android:textColorHint="@color/light_yellow"
                        android:inputType="textCapSentences|textPersonName|textMultiLine"
                        android:gravity="top"
                        android:textColor="@color/yellow"
                        android:textSize="18dp"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_recipe_add_edit_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:text="CANCEL"/>

                <Button
                    android:id="@+id/btn_recipe_add_edit_save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:text="SAVE"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>