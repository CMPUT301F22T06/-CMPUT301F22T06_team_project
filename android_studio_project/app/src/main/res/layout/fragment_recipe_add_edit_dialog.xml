<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="@color/yellow"
                    android:textSize="20dp" />

                <!--        TODO Replace a carriage return with ' next '-->
                <EditText
                    android:id="@+id/et_recipe_add_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name Here"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="55"
                    android:textColorHint="@color/light_yellow"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/view_recipe_image"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_recipe_add_edit_upload"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:textColor="@color/black"
                    android:text="Upload Picture"
                    android:textSize="6dp"/>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serves: "
                android:textColor="@color/yellow"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_recipe_add_edit_servings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="#Servings"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="3"
                android:textColorHint="@color/light_yellow"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Preptime: "
                android:textColor="@color/yellow"
                android:textSize="15dp" />

            <!--        TODO Replace a carriage return with ' next '-->
            <EditText
                android:id="@+id/et_recipe_add_edit_preptime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minutes"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="5"
                android:textColorHint="@color/light_yellow"
                android:textSize="11dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textColor="@color/yellow"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/sp_recipe_add_edit_category"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:backgroundTint="@color/yellow"
                />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients: "
                android:textSize="20dp"
                android:textColor="@color/yellow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_recipe_add_edit_ingredients_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_height="40sp"
                    android:backgroundTint="@color/yellow"
                    />

                <Button
                    android:id="@+id/btn_recipe_add_edit_add_ingredient"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:text="Add"/>

            </LinearLayout>


            <!--        TODO Replace a carriage return with ' next ' action-->

            <ListView
                android:id="@+id/lv_recipe_add_edit_ingredients_view"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:width="1dp"
                android:color="#ff9900"
                android:gravity="top"
                android:hint="All ingredients will be shown here"
                android:imeOptions="actionNext"
                android:textSize="12dp" >
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments: "
                    android:textSize="20dp"
                    android:textColor="@color/yellow"/>

                <EditText
                    android:id="@+id/et_recipe_add_edit_comments"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Enter recipe comments "
                    android:textColorHint="@color/light_yellow"
                    android:inputType="textCapSentences|textPersonName|textMultiLine"
                    android:gravity="top"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btn_recipe_add_edit_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:text="CANCEL"/>

            <Button
                android:id="@+id/btn_recipe_add_edit_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:text="DELETE"/>

            <Button
                android:id="@+id/btn_recipe_add_edit_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:text="SAVE"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>