<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/red">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="@color/yellow"
                    android:textSize="20dp" />

            <EditText
                android:id="@+id/et_ingredient_add_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name Here"

                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="35"
                android:textColor="@color/yellow"
                android:textColorHint="@color/yellow"
                android:textSize="15dp"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789 -"
                />
        </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textColor="@color/yellow"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/et_ingredient_add_edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description Here"
                android:textColorHint="@color/light_yellow"
                android:textSize="15dp"
                android:inputType="textCapSentences|textPersonName|textMultiLine"
                android:maxLength="120"
                android:textColor="@color/light_yellow"
                android:imeOptions="actionNext" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="Best Before Date: "
                    android:textSize="18dp"/>

                <DatePicker
                    android:id="@+id/dp_ingredient_add_edit_best_before_date"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:spinnersShown="true"
                    android:theme="@style/MyDatePicker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Location: "
                    android:textSize="18dp"
                    android:textColor="@color/light_yellow"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/addLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:hint="Add Location"
                        android:textSize="13dp"
                        android:textColor="@color/light_yellow"
                        android:textColorHint="@color/light_yellow"
                        android:paddingRight="10dp"
                         />

                    <Button
                        android:id="@+id/addLocationButton"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Add"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                         />

                    <Button
                        android:id="@+id/deleteLocationButton"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <Spinner
                    android:id="@+id/sp_ingredient_add_edit_location"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/yellow"
                    android:scrollbarSize="200dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount: "
                        android:textColor="@color/yellow"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_ingredient_add_edit_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:inputType="number"
                        android:textColor="@color/yellow"
                        android:textColorHint="@color/light_yellow"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/addUnit"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Add Unit"
                            android:textSize="10dp"
                            android:textColor="@color/light_yellow"
                            android:textColorHint="@color/light_yellow" />

                        <Button
                            android:id="@+id/addUnitButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:width="10dp"
                            android:text="Add"
                            android:textSize="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/deleteUnitButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:width="10dp"
                            android:text="Delete"
                            android:textSize="8dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/sp_ingredient_add_edit_unit"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:backgroundTint="@color/yellow"
                        android:textColor="@color/yellow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:textColor="@color/yellow">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Category: "
                    android:textColor="@color/light_yellow"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/addCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Add Category"
                        android:textSize="13dp"
                        android:textColor="@color/light_yellow"
                        android:textColorHint="@color/light_yellow"
                        android:paddingRight="10dp"
                        />
                    <Button
                        android:id="@+id/addCategoryButton"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Add"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />

                    <Button
                        android:id="@+id/deleteCategoryButton"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <Spinner
                    android:id="@+id/sp_ingredient_add_edit_category"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/yellow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ingredient_add_edit_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="CANCEL"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_ingredient_add_edit_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="SAVE"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>